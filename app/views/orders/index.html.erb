<div class="col-md-8 col-md-offset-2">
  <table class="table table-striped">
    <tr>
      <td>Info</td><td>Aktionen</td>
    </tr>
    <% @orders.each do |order| %>
    <% if !order.Erstellung? %>
        <tr>
          <td>
            Status: <%= order.order_status %> <br/>
            An: <%= order.street %> <br/>
            <%= order.postal %> <%= order.city %>
          </td>
          <td>
            <%= link_to order , method: :delete,
                  data: { confirm: "Bestellung lÃ¶schen?" }, :class => "btn btn-danger cart-btn" do %>
                  <i class="glyphicon glyphicon-remove"></i>
            <% end %>
            <%= link_to "Details", order_path(order.id), :class => "btn btn-primary cart-btn" %>
            <% if order.Auftrag? %>
              <%= link_to "Liefern", deliver_order_path(:order_id => order.id), :class => "btn btn-success cart-btn" %>
            <% end %>


          </td>
        </tr>
      <% end %>
     <% end %>
  </table>



</div>
