<div class="col-md-8 col-md-offset-2">
  <table class="table table-striped">
    <tr>
      <td>Info</td><td>Aktionen</td>
    </tr>
    <% if @orders.count > 0 %>
    <% @orders.each do |order| %>
      <% if !(order.Erstellung?) %>
        <tr>
          <td>
            Status: <%= order.order_status %> <br/>
            An: <%= order.street %> <br/>
            <%= order.postal %> <%= order.city %> 
          </td>
	  <td>
	  <% if order.Auftrag? %>
            <%= link_to cancel_order_path , method: :delete,
                  data: { confirm: "Bestellung stornieren?" }, :class => "btn btn-danger cart-btn" do %>
                  <i class="glyphicon glyphicon-remove"></i>
	    <% end %>

          <% elsif order.Abgeschickt? %>
            <%= link_to "Geliefert",  delivered_order_path, :class => "btn btn-success cart-btn"%>
	  <% else %>
            <%= button_to "Stornieren",  :class => "btn btn-primary cart-btn" %>
          <% end %>
            <%= link_to "Details", order_path(order.id), :class => "btn btn-primary cart-btn" %>
          
          </td>
        </tr>
      <% end %>  
    <% end %> 
  <% end %>
  </table>



</div>
