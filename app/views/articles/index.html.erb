<!--
@links.each do |article|
  = link_to "upvote", like_article_path(article), method: :put
  -->

<%= will_paginate :previous_label => "Zurück", :next_label => "Weiter" %>
  <ul class="articles">

    <% @articles.each do |article| %>
      <li>
        <p><%=link_to article.name, article %></p>
        <p>
          <%=article.description %>
          <span class = "pull-right" >
            <%= article.price %> €
            <%= link_to '#', :class => "btn btn-primary cart-btn" do %>
              <i class="glyphicon glyphicon-shopping-cart"></i>
            <% end %>

            <% if current_user.try(:admin?) %>
              <%= link_to article, method: :delete,
                data: { confirm: "You sure?" }, :class => "btn btn-danger" do %>
                <i class="glyphicon glyphicon-remove"></i>
              <% end %>
            <% end %>
          </span>
        </p>
      </li>
    <% end %>
  </ul>
<%= will_paginate :previous_label => "Zurück", :next_label => "Weiter" %>
