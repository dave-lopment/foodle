<div class="col-md-4 center-div">
  <h1>Edit Article</h1>

  <%= form_for(@article) do |f| %>

    <%= f.select :category_id, Category.all.map{|c| [c.name, "#{c.id}"]} %>


    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.check_box :isVegetarian %>
      <%= f.label :isVegetarian, " vegetarisch" %>
    </div>

    <%= f.file_field :img_name, accept: 'image/jpeg,image/gif,image/png' %>

    <%= f.submit "Speichern", class: "btn btn-primary pull-right" %>

  <% end %>

  <%= link_to "Artikel Löschen", @article, method: :delete,
    data: { confirm: "Artikel #{@article.name} löschen?" }, :class => "btn btn-danger" %>
  <br/>
  <br/>
  <%= link_to "Abbrechen", :back, class: "btn btn-default" %>
</div>
