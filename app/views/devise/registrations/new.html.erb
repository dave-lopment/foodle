<div class="col-md-4 center-div">
  <h2>Registrierung</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    :class => "form-horizontal") do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :street, "StraÃŸe" %>
      <%= f.text_field :street, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :postal, "PLZ" %>
        <%= f.text_field :postal, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :city, "Stadt" %>
        <%= f.text_field :city, :class => "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :password, "Passwort" %>
      <% if @minimum_password_length %>
      <em>(Minimum <%= @minimum_password_length %> Zeichen)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Passwort wiederholen" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrieren", :class => "btn btn-primary pull-right" %>
    </div>
  <% end %>

</div>
